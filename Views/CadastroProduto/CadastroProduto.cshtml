@model PtccAsp.net.Models.CadastroProduto

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success">@TempData["Sucesso"]</div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}

<div class="container d-flex justify-content-center">
    <form method="post"
          asp-controller="CadastroProduto"
          asp-action="@(Model?.IdProduto > 0 ? "Update" : "Create")"
          class="col-md-6">

        <h1 class="text-center">
            @(Model?.IdProduto > 0 ? "Editar Produto" : "Cadastrar Produto")
        </h1>

        <input type="hidden" asp-for="IdProduto" />

        <div class="mb-3">
            <label class="form-label">Nome do Produto</label>
            <input type="text" class="form-control" asp-for="NomeProduto" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Categoria</label>
            <input type="text" class="form-control" asp-for="Categoria" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Preço</label>
            <input type="number" class="form-control" step="0.01" asp-for="Preco" required>
        </div>

        <button type="submit" class="btn btn-primary w-100">
            @(Model?.IdProduto > 0 ? "Atualizar" : "Cadastrar")
        </button>
    </form>
</div>