@model List<PtccAsp.net.Models.CadastroProduto>

@{
    ViewData["Title"] = "Produtos Cadastrados";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📦 Produtos Cadastrados</h2>
        <a href="/CadastroProduto/CadastroProduto" class="btn btn-primary">➕ Novo Produto</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Categoria</th>
                                <th>Preço</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var produto in Model)
                            {
                                <tr>
                                    <td>@produto.NomeProduto</td>
                                    <td>
                                        <span class="badge bg-secondary">@produto.Categoria</span>
                                    </td>
                                    <td>
                                        <strong>R$ @produto.Preco.ToString("N2")</strong>
                                    </td>
                                    <td>

                                        <a href="/CadastroProduto/Editar/@produto.IdProduto"
                                           class="btn btn-warning btn-sm">
                                            ✏️ Editar
                                        </a>
                                      
                                        <a href="/CadastroProduto/Excluir/@produto.IdProduto"
                                           class="btn btn-danger btn-sm"
                                           onclick="return confirm('Tem certeza que deseja excluir este produto?')">
                                            🗑️ Excluir
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <small>Total de produtos: @Model.Count</small>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h5>Nenhum produto cadastrado ainda</h5>
            <p>Comece cadastrando seu primeiro produto!</p>
            <a href="/CadastroProduto/CadastroProduto" class="btn btn-primary">Cadastrar Primeiro Produto</a>
        </div>
    }
</div>