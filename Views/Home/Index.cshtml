@{
    ViewData["Title"] = "Sistema DF - Dashboard";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Seja Bem-Vindo ao Sistema DF</h1>
        <p class="lead">Sistema de Gerenciamento de Produtos e Clientes</p>
    </div>

<div id="carouselSistema" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80"
                 class="d-block w-100 rounded"
                 alt="Gestão de Produtos"
                 style="height: 300px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>Gestão de Produtos</h5>
                <p>Controle completo do seu catálogo</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1563013544-824ae1b704d3?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80"
                 class="d-block w-100 rounded"
                 alt="Gestão de Clientes"
                 style="height: 300px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>Gestão de Clientes</h5>
                <p>Organize sua base de clientes</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80"
                 class="d-block w-100 rounded"
                 alt="Dashboard"
                 style="height: 300px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>Dashboard Completo</h5>
                <p>Acompanhe tudo em um só lugar</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselSistema" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselSistema" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Próximo</span>
    </button>
</div>


<div class="row">
 
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">📦 Produtos</h5>
                    <p class="card-text">Gerencie seu catálogo de produtos</p>
                    <a href="/CadastroProduto/CadastroProduto" class="btn btn-primary">Cadastrar Produto</a>
                    <a href="/ProdutosCadastrados/ProdutosCadastrados" class="btn btn-outline-secondary">Ver Produtos</a>
                </div>
            </div>
        </div>

        
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">👥 Clientes</h5>
                    <p class="card-text">Gerencie sua base de clientes</p>
                    <a href="/Cliente/Cliente" class="btn btn-primary">Cadastrar Cliente</a>
                    <a href="/Cliente/Lista" class="btn btn-outline-secondary">Ver Clientes</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">📊 Resumo do Sistema</h5>
                    <p class="card-text">
                        Sistema desenvolvido para gerenciamento completo de produtos e clientes.
                        Acesse os menus acima para começar.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
